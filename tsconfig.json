{
  "compilerOptions": {
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
